# editorconfig.org
[*]
# change these to your liking
indent_style = space
indent_size = 2

# it's recommend to keep these unchanged
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Markdown files
# https://github.com/google/styleguide/blob/gh-pages/docguide/style.md
[*.md]
trim_trailing_whitespace = false

# 4 space indentation for Python
# https://google.github.io/styleguide/pyguide.html
[*.py]
indent_style = space
indent_size = 4

# Vim
# https://google.github.io/styleguide/vimscriptguide.xml
[*.vim]
indent_style = space
indent_size = 4

# Makefile
[Makefile]
indent_style = tab

# Java
# https://google.github.io/styleguide/javaguide.html
[*.java]
indent_style = space
indent_size = 2

# HTML/CSS
# https://google.github.io/styleguide/htmlcssguide.xml
[{css,*.html}]
indent_style = space
indent_size = 2

# Javascript
# https://google.github.io/styleguide/jsguide.html
[{js,*.css,*.html}]
indent_style = space
indent_size = 2

# NPM
[{package,bower}.json]
indent_style = space
indent_size = 4

# YAML files
[{*.yml,*yaml}]
indent_style = space
indent_size = 2

# Shell configuration
[{.bashrc,.zshrc,.zshrc.*}]
indent_style = space
indent_size = 4
tab_width = 4

# Shell scripts
[{*.sh,*.zsh,*.bash}]
indent_style = space
indent_size = 4
tab_width = 4
